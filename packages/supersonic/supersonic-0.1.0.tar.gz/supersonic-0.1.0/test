#!/bin/bash

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
NC='\033[0m' # No Color

echo "ðŸ§¹ Running formatters and linters..."

# Run ruff
echo -n "Running ruff... "
if ruff check --fix; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    exit 1
fi

# Run mypy
echo -n "Running mypy... "
if mypy .; then
    echo -e "${GREEN}âœ“${NC}"
else
    echo -e "${RED}âœ—${NC}"
    exit 1
fi

echo "ðŸ§ª Running tests..."
pytest supersonic/tests/test_cli.py -v

echo -e "\n${GREEN}All done!${NC}"