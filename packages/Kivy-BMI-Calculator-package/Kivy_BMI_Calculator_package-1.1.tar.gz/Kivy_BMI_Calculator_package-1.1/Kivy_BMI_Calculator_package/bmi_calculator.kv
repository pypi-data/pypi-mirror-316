<Main_grid>
    system: 'Metric'
    advanced: 'False'
    grid: None
    ideal_weight: None
    cols: 1
    Label:
        text: 'BMI Calculator'
        font_size: 30
        size_hint_y: None
        height: 50
    GridLayout:
        cols: 1
        size_hint: (1, 0.5)
        padding: 10
        GridLayout:
            cols: 1
            Label:
                text: 'Settings'
                font_size: 30
            GridLayout:
                cols: 2
                Label:
                    text: 'Switch system, current: %s' % root.system
                    id: system_label
                Switch:
                    on_active: root.switch_system()
            GridLayout:
                cols: 2
                Label:
                    text: f'Advanced form, current: {root.advanced}'
                    id: advanced_label
                Switch:
                    on_active: root.switch_advanced()
        Label:
            text: 'Fill Out Form'
            font_size: 30
            size_hint_y: None
            size_hint: (1, 0.3)
        GridLayout:
            cols: 2
            size_hint: (1, 0.2)
            Label:
                text: 'Height (cm) max: 300, min: 120'
                id: height_label
            TextInput:
                id: height
                multiline: False
                input_type: 'number'
        GridLayout:
            cols: 2
            size_hint: (1, 0.2)
            Label:
                text: 'Weight (kg) max: 300, min: 30'
                id: weight_label
            TextInput:
                id: weight
                multiline: False
                input_type: 'number'
    GridLayout:
        cols: 1
        size_hint: (1, 0.075)
        padding: 10
        id: advanced_form

    Button:
        text: 'Get BMI'
        size_hint: (0.2, 0.1)
        padding: 20
        on_press: root.calculate_bmi()




<Result_popup>
    title: 'Results'
    size_hint: (0.7, 0.7)
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Your results are:'
            font_size: 30
        Label:
            id: bmi_number
        Label:
            id: result
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0,0.1)
            id: advanced_results
        Button:
            text: 'Close'
            on_press: root.dismiss()

<Error_popup>
    title: 'Error'
    size_hint: (0.7, 0.7)
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: reason
        Button:
            text: 'Close'
            size_hint: (1, 0.2)
            padding: 10
            on_press: root.dismiss()

<Advanced_form>
    cols: 1
    GridLayout:
        cols: 2
        size_hint: (1, 0.2)
        Label:
            text: 'Gender'
        Spinner:
            values: ("Male", "Not Male") # This may be funny to some people, but thats how many of the forms in my country do it.
            text: 'Select'
            id: gender