<MainGrid>
    cols: 1
    time: 0
    is_running: False
    clock_event: None
    number_of_laps: 0
    light_mode: False
    Label:
        text: 'Stopwatch'
        font_size: 50
        size_hint: (1,0.3)
    GridLayout:
        cols: 1
        size_hint: (1,0.4)
        Label:
            id: time
            text: '00:00:00'
            font_size: 100
            size_hint: (1,1)
    GridLayout:
        cols: 3
        size_hint: (1,0.2)
        Button:
            text: 'Reset'
            size_hint_y: None
            size: (100,75)
            on_press: root.reset()
            background_color: 0,0,1,1
        Button:
            text: 'Lap'
            size_hint_y: None
            size: (100,75)
            on_press: root.lap()
            background_color: 0,0,1,1
        Button:
            text: 'Start'
            id: start_stop
            size_hint_y: None
            size: (100,75)
            on_press: root.start_stop()
            color: (0,1,0,1)
            background_color: 0,0,1,1
            on_press: root.start_stop_change_color(self)
    GridLayout:
        cols: 1
        size_hint: (1,0.3)
        Label:
            text: 'Lap Times'
            font_size: 25
            size_hint: (1,0.5)
        ScrollView:
            GridLayout:
                id: scrollview
                cols: 1
                size_hint_y: None
