# ğŸ¦¦ Dr. OtterAI Code Review Rules

# ğŸ¯ Project Structure
root = true
language = python
test_framework = pytest
python_version = 3.12

# ğŸ“ File Organization
[paths]
src = "otterai/"
tests = "tests/"
workflows = ".github/workflows/"
docs = "docs/"

# ğŸ Python Rules
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100
quote_type = double
docstring_style = google

# ğŸ§ª Test Rules
[tests/**.py]
test_naming = test_*
test_framework = pytest
test_dir = tests/

# ğŸ”§ GitHub Actions
[.github/workflows/**.yml]
indent_style = space
indent_size = 2

# ğŸ“ Documentation
[*.md]
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

# ğŸ¨ Code Style
[style]
formatter = black
linter = flake8
type_checker = mypy

# ğŸš« Skip Patterns
[skip_patterns]
title_patterns = [
    "(no|skip)(-|\\s)?review",
    "skip(-|\\s)?code(-|\\s)?review",
    "otter(ai)?(-|\\s)?skip",
    "otter(-|\\s)?restricted"
]
state_patterns = [
    "merged",
    "closed"
]

# ğŸ” Review Focus
[review]
focus_areas = [
    "security",
    "performance",
    "maintainability",
    "code quality",
    "test coverage"
]
comment_style = "markdown"
include_code_snippets = true
include_doc_references = true

# ğŸ¤– LLM Providers
[llm_providers]
default = "openai"
supported = [
    "openai",
    "gemini",
    "groq",
    "mistral"
]

# ğŸ“ Models
[models]
openai = "gpt-4-turbo-preview"
gemini = "gemini-1.5-flash"
groq = "mixtral-8x7b-32768"
mistral = "mistral-large-latest"

# ğŸ”’ Security
[security]
require_api_keys = true
token_env_prefix = "INPUT_"
sensitive_patterns = [
    "api[_-]key",
    "secret",
    "token",
    "password"
]

# ğŸ¯ Git Hooks
[hooks]
pre_commit = [
    "black",
    "flake8",
    "mypy",
    "pytest"
]

# ğŸ“ Commit Message Format example try to add what it will improve and why this is important, try to add the scope of the change, try to add the type of the change, try to add the description of the change
[commit_message_format]
type = "feat"
scope = "otterai"
title = "Add new feature"
description = "This is a new feature"


# ğŸš€ CI/CD
[ci]
required_checks = [
    "test",
    "lint",
    "type-check",
    "security-scan"
]
python_versions = ["3.12"]
os_targets = ["ubuntu-latest"] 