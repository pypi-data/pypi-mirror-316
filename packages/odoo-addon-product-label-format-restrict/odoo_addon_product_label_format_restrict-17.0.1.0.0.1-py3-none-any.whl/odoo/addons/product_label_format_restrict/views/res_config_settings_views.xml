<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='performance']" position="after">
                <block
                    title="Restricted Product Print Formats"
                    name="product_label_format_restrict_block"
                >
                    <setting
                        id="product_label_format_restrict"
                        help="The selection of this product label formats will be restricted to every user"
                    >
                        <field
                            name="restricted_product_label_formats"
                            widget="many2many_tags"
                        />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
